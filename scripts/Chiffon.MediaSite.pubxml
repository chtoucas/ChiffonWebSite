  <Target Name="_CopyConfigs" AfterTargets="PipelineDeployPhase">
    <Copy SourceFiles="@(ConfigFiles)"
          DestinationFiles="@(ConfigFiles->'$(PublishUrl)config\%(Filename)%(Extension)')" />
  </Target>
  -->
</Project>
<?xml version="1.0" encoding="utf-8" ?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--
    On demande à MSBuild de sauvegarder le résultat de la transformation
    d'une solution en un fichier projet.
  -->
  <Target Name="EmitProjectSolution">
    <SetEnv Variable="msbuildemitsolution" Value="1"/>
  </Target>

  <Target Name="GetAspNetRegIis">
    <GetFrameworkPath>
      <Output TaskParameter="FrameworkVersion40Path" PropertyName="_FxPath" />
    </GetFrameworkPath>

    <PropertyGroup>
      <AspNetRegIis>&quot;$(_FxPath)\aspnet_regiis.exe&quot;</AspNetRegIis>
    </PropertyGroup>
  </Target>

  <Target Name="GetPEVerify">
    <!--
    http://connect.microsoft.com/VisualStudio/feedback/details/799353/cant-compile-our-csproj-file-with-visualstudio-2013-preview-because-of-a-breaking-change-in-the-msbuild-task-getframeworksdkpath
    -->
    <!--
    <GetFrameworkSdkPath>
      <Output TaskParameter="FrameworkSdkVersion40Path" PropertyName="_SdkPath" />
    </GetFrameworkSdkPath>

    <PropertyGroup>
      <_NetFxTools>$(_SdkPath)Bin\NETFX 4.0 Tools\</_NetFxTools>
    </PropertyGroup>
    -->

    <PropertyGroup>
      <!--<PEVerifyExe>&quot;$(_NetFxTools)peverify.exe&quot;</PEVerifyExe>-->
      <PEVerifyExe>&quot;$(SDK40ToolsPath)peverify.exe&quot;</PEVerifyExe>
    </PropertyGroup>
  </Target>

</Project>

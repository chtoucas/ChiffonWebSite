@using Chiffon.Common

<!DOCTYPE html>
<html lang="@ViewBag.Language">
<head>
 <meta charset="utf-8" />
 <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
 <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
 <title>@ViewBag.Title</title>
 <meta name=description content="@ViewBag.MetaDescription" />
 <meta name=keywords content="@ViewBag.MetaKeywords" />
 <meta name=copyright content="Copyright © 2013 Pour quel motif Simone ?" />
 <meta name=robots content="@ViewBag.MetaRobots" />
 <meta name=viewport content="width=device-width, initial-scale=1" />
 @*<base href="/"/>*@
 <link rel=canonical href="@ViewBag.CanonicalLink"/>
 @{Html.RenderAction("CommonStylesheet", "Widget");}
 @*HTML5 fix for IE*@
 @* <script>(function(c) { c('header'); c('nav'); c('footer'); })(document.createElement);</script>*@
</head>
<body id="@ViewBag.BodyId">
 <header>
  <h1>@Html.Raw(SharedVR.Title)</h1>
  <nav id=nav_lang class=clr>
   <ul class="inline right">
    <li>EN</li>
    <li class=sep>/</li>
    <li><a href="#">FR</a></li>
   </ul>
  </nav>
  <nav id=nav_main class=clr>
   <ul class=center>
    <li><a href="@Url.RouteUrl(ViewName.Home.Index)" id=nav_home>@SharedVR.MainNav_Home</a></li>
    <li class=sep>/</li>
    <li><a href="//pourquelmotifsimone.blogspot.fr" id=nav_blog rel=external target=_blank>@SharedVR.MainNav_Blog</a></li>
    <li class=sep>/</li>
    <li><a href="@Url.RouteUrl(ViewName.Home.About)" id=nav_info>@SharedVR.MainNav_Info</a></li>
    <li class=sep>/</li>
    <li><a href="@Url.RouteUrl(ViewName.Home.Contact)" id=nav_contact>@SharedVR.MainNav_Contact</a></li>
    <li class=right><a href="@Url.RouteUrl(ViewName.Home.Newsletter)" id=nav_newsletter>@SharedVR.MainNav_Newsletter</a></li>
   </ul>
  </nav>
 </header>
 <div id=content>
  @RenderBody()
 </div>
 <footer class=grey>
  <p id=legal>@Html.Raw(SharedVR.Disclaimer)</p>
  <p id=copyright>© Pour quel motif, Simone ? 2013</p>
 </footer>
 @{Html.RenderAction("CommonJavaScript", "Widget");}
</body>
</html>

@using Chiffon.Entities
@using Chiffon.Infrastructure
@using Narvalo.Web.Semantic

@model IEnumerable<Designer>

@{
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="home_about" itemscope itemtype="@SchemaOrgType.Organization">
 <div class="serif serif_large">
  @{ RenderPartialResource(Constants.ViewName.Home.AboutContent); }
 </div>
 <ul class="li_inline li_designers clearfix text_center">
  @foreach (var designer in Model) {
   <li itemprop=member itemscope itemtype="@SchemaOrgType.Person">
    <h2 class="serif fx_strike"><a href="@Url.Designer(designer.Key, 1)" class=loose><span itemprop="name">@designer.DisplayName</span></a></h2>
    <ul>
     <li class=avatar>
      @*<a href="@Url.Pattern(designer.Key, designer.AvatarCategory, designer.AvatarReference, 1)" class="vignette @CssUtility.DesignerClass(designer.Key)">*@
      <a href="@Url.RouteUrl(Constants.RouteName.Home.Contact)" class="vignette @CssUtility.DesignerClass(designer.Key)">
       <img src="@Url.PreviewContent(designer.Key, designer.AvatarReference, designer.AvatarVersion)" alt="@designer.DisplayName" width=@ImageGeometry.PreviewWidth height=@ImageGeometry.PreviewHeight itemprop=image />
       <div class=overlay></div>
       <div class=watermark></div>
      </a>
     </li>
     <li class=email><a class=text_underline href="mailto:@designer.EmailAddress" itemprop="email">@designer.EmailAddress</a></li>
     @if (designer.WebsiteUrl.IsSome) {
      var website = designer.WebsiteUrl.Value.ToString().Replace("http://", String.Empty);
      <li class="website text_right sansserif"><a href="//@website" rel=external target=_blank class=loose itemprop="url">@website.Replace("/", String.Empty)</a></li>
     }
    </ul>
   </li>
  }
 </ul>
</div>
  </runtime>
  <narvalo.web>
    <optimization enableWhiteSpaceBusting="false" />
    <assets defaultProvider="local">
      <providers>
        <clear />
        <add name="local" type="Chiffon.Infrastructure.LocalAssetProvider, Chiffon" />
        <add name="remote" type="Narvalo.Web.UI.Assets.RemoteAssetProvider, Narvalo.Web" baseUri="http://localhost:8080/virtualdirectory/assets/" />
      </providers>
    </assets>
  </narvalo.web>
  <elmah>
    <errorLog type="Elmah.MemoryErrorLog, Elmah" size="100" />
  </elmah>
  <glimpse defaultRuntimePolicy="On" endpointBaseUri="~/devil/glimpse">
    <!--<logging level="Trace"/>-->
  </glimpse>
</configuration>
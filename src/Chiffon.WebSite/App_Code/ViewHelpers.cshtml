@* Generator: MvcHelper Namespace: Chiffon.Common*@

@helper Pager(UrlHelper Url, DesignerViewModel Model)
{
 <p id=pager class=pager>
  @if (Model.IsFirstPage) {
   @VR.Pager_Previous
  }
  else {
   <a href="@Url.Designer(Model.Designer.Key, Model.PageIndex - 1)">@VR.Pager_Previous</a>
  }
  /
  @if (Model.IsLastPage) {
   @VR.Pager_Next
  }
  else {
   <a id=next_page class=more href="@Url.Designer(Model.Designer.Key, Model.PageIndex + 1)">@VR.Pager_Next</a>
  }
  - @Model.PageIndex @VR.Pager_Of @Model.PageCount
 </p>
}


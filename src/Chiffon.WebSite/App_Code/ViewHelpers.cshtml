@helper Pager(UrlHelper Url, PatternViewModel Model)
{
 // On ajoute l'attribut "rel=nofollow" car il s'agit toujours au final du même motif.
 <p id=pager class=pager>
  @if (Model.IsFirstPage) {
   @VR.Pager_Previous
  }
  else {
   <a rel=nofollow href="@Url.Pattern(Model.Designer.Key, Model.Category.Key, Model.Reference, Model.PageIndex - 1)">@VR.Pager_Previous</a>
  }
  /
  @if (Model.IsLastPage) {
   @VR.Pager_Next
  }
  else {
   <a id=next_page class=more rel=nofollow href="@Url.Pattern(Model.Designer.Key, Model.Category.Key, Model.Reference, Model.PageIndex + 1)">@VR.Pager_Next</a>
  }
  - @Model.PageIndex @VR.Pager_Of @Model.PageCount
 </p>
}

